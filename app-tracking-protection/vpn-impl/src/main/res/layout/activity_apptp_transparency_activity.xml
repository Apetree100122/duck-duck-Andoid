<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.tracker_activity.AppTPTransparencyActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_company_trackers_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/unprotected_requests"
                app:typography="h1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/keyline_5"
                android:layout_marginStart="@dimen/keyline_5"
                android:layout_marginEnd="@dimen/keyline_5"
                tools:text="9 unprotected requests in Google Chrome app"/>

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/appInfo"
                app:typography="body1"
                app:textType="secondary"
                tools:text="@string/atp_AboutChrome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_5"
                android:layout_marginStart="@dimen/keyline_5"
                android:layout_marginEnd="@dimen/keyline_5"
                android:layout_marginBottom="@dimen/keyline_4"/>

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/browserDefaultTxt"
                app:typography="h2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/keyline_4"
                android:layout_marginStart="@dimen/keyline_5"
                android:layout_marginEnd="@dimen/keyline_5"
                tools:text="@string/atp_BrowserDefaultText"
                android:textAlignment="center"/>

            <com.duckduckgo.mobile.android.ui.view.button.DaxButtonPrimary
                android:id="@+id/defaultCTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                android:layout_marginTop="@dimen/keyline_4"
                android:layout_marginEnd="@dimen/keyline_5"
                android:text="@string/atp_BrowserDefaultCTA"
                app:buttonSize="large"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
